{
  "name": "task_manager",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start-db": "docker-compose -f src/docker/docker-compose.yml up -d",
    "stop-db": "docker-compose -f src/docker/docker-compose.yml down",
    "start-only-server": "cd ../server && yarn start:dev",
    "start-dev": "yarn dev && yarn start-only-server && yarn start-db"
  },
  "workspaces": [
    "src",
    "server"
  ],
  "dependencies": {
    "@apollo/client": "^3.8.9",
    "@apollo/server": "^4.10.0",
    "@nestjs/cli": "^10.3.0",
    "antd": "^5.13.1",
    "docker-compose": "^0.24.3",
    "graphql": "^16.8.1",
    "graphql-ws": "^5.14.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
